pipeline {
    agent any

    stages {
        stage('Print Hello World') {
            steps {
                sleep 5
                echo 'Hello World'
            }
        }

        stage('New stage - 1') {
                    steps {
                        sleep 10
                        echo 'Hello World 1'
                    }
                }

        stage('New stage - 2') {
                    steps {
                        sleep 15
                        echo 'Hello World 2'
                    }
                }

         stage('New stage - 3') {
                            steps {
                                sleep 3
                                echo 'Hello World 3'
                            }
                        }
    }
}
